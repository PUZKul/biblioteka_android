<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/colorGray"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fil_contact_details_text_view"
        android:layout_width="311dp"
        android:layout_height="164dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:text="@string/if_you_want_to_borrow_a_book_you_must_complete_the_registration"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryBlue"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fil_contact_details_cancel"
        android:layout_width="130dp"
        android:layout_height="71dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_secondary"
        android:padding="18dp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fil_contact_details_text_view"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/fil_contact_details_comlpete"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_secondary"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5px"
        android:text="@string/continue_registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fil_contact_details_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>