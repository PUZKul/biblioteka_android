<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorPrimaryBackground">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@string/create_account"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryGreen"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="26dp"
            android:layout_marginTop="52dp"
            android:text="@string/nick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.199"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/register_editText_nick"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:background="@drawable/btn_whitescene"
            android:ems="10"
            android:hapticFeedbackEnabled="false"
            android:inputType="textPersonName"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.351"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:id="@+id/imgnick"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:background="@drawable/btn_primary"
            android:contentDescription="@string/todo"
            android:scaleType="center"
            app:layout_constraintStart_toEndOf="@+id/register_editText_nick"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/icon_nick" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="148dp"
            android:layout_height="26dp"
            android:layout_marginTop="16dp"
            android:text="@string/email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.197"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_editText_nick" />

        <EditText
            android:id="@+id/register_editText_email"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:background="@drawable/btn_whitescene"
            android:ems="10"
            android:hapticFeedbackEnabled="false"
            android:inputType="textEmailAddress"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.344"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:id="@+id/imgMail"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:background="@drawable/btn_primary"
            android:contentDescription="@string/todo"
            android:scaleType="center"
            app:layout_constraintStart_toEndOf="@+id/register_editText_email"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:srcCompat="@drawable/icon_email" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="26dp"
            android:layout_marginTop="16dp"
            android:text="@string/password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.191"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_editText_email" />

        <EditText
            android:id="@+id/register_editText_password"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:background="@drawable/btn_whitescene"
            android:ems="10"
            android:hapticFeedbackEnabled="false"
            android:inputType="textPassword"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.344"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <ImageView
            android:id="@+id/imgPassword"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:background="@drawable/btn_primary"
            android:contentDescription="@string/todo"
            android:scaleType="center"
            app:layout_constraintStart_toEndOf="@+id/register_editText_password"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:srcCompat="@drawable/icon_pass" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="150dp"
            android:layout_height="26dp"
            android:layout_marginTop="16dp"
            android:text="@string/repeat_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.191"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_editText_password" />

        <ImageView
            android:id="@+id/imgRepeatPassword"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:background="@drawable/btn_primary"
            android:contentDescription="@string/todo"
            android:scaleType="center"
            app:layout_constraintStart_toEndOf="@+id/register_editText_repeatPassword"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/icon_pass" />

        <EditText
            android:id="@+id/register_editText_repeatPassword"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:background="@drawable/btn_whitescene"
            android:ems="10"
            android:hapticFeedbackEnabled="false"
            android:inputType="textPassword"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.331"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Button
            android:id="@+id/register_btn_register"
            android:layout_width="144dp"
            android:layout_height="37dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_primary"
            android:text="@string/register"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_editText_repeatPassword" />

        <TextView
            android:id="@+id/register_textasbatton_login"
            android:layout_width="236dp"
            android:layout_height="21dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_btn_register"
            app:layout_constraintVertical_bias="0.0" />

        <ProgressBar
            android:id="@+id/registration_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="130dp"
            android:layout_height="131dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>