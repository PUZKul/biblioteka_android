<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.fragments.notLoggedIn.historyAndReading.notLoggedInReading.NotLoggedInReading">


    <ImageView
        android:id="@+id/fragmentNoLoginReading_image_LoginIn"
        android:layout_width="190dp"
        android:layout_height="170dp"
        android:layout_marginTop="140dp"
        android:clickable="true"
        android:contentDescription="@string/clicktologinin"
        android:focusable="true"
        android:src="@drawable/not_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragmentNoLoginReading_text_LoginIn"
        android:layout_width="74dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:text="@string/login_in"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/FragmentNoLogin_text_historyInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentNoLoginReading_image_LoginIn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/FragmentNoLogin_text_historyInfo"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/current_page"
        android:fontFamily="sans-serif-light"
        android:text="for creating your own \n reading list"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentNoLoginReading_text_LoginIn"
        tools:ignore="HardcodedText,MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>