<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground">

    <LinearLayout
        android:id="@+id/LinearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editProfile_text_editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100sp"
            android:gravity="center"
            android:text="@string/edit_profile"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />


        <ProgressBar
            android:id="@+id/editProfile_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="130dp"
            android:layout_height="131dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/LinearLayoutMain" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="40sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editProfile_textViev_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editProfile_editText_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@drawable/btn_whitescene"
                android:ems="10"
                android:inputType="textEmailAddress"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/editProfile_checkBox_changePasswordCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="40sp"
            android:buttonTint="#39813C"
            android:checked="false"
            android:text="@string/change_password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="40sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editProfile_textViev_newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_password" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"

            android:orientation="vertical">

            <EditText
                android:id="@+id/editProfile_editText_newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@drawable/btn_whitescene"
                android:ems="10"
                android:inputType="textPassword"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="40sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editProfile_textViev_repeatPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repeat_password" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editProfile_editText_repeatPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@drawable/btn_whitescene"
                android:ems="10"
                android:inputType="textPassword"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="50sp"
            android:layout_marginRight="30sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <Button
                    android:id="@+id/editProfile_btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_secondary"
                    android:text="@string/Cancel"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/editProfile_btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_primary"
                    android:text="@string/Save"
                    android:textColor="@color/colorWhite"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>

